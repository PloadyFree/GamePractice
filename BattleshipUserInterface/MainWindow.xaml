<Window x:Class="BattleshipUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipUserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <StackPanel Orientation="Vertical">
        <Button Click="CreateNewGameHandle" Content="Create new game" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 30, 0, 0"></Button>
        <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Label Content="Self field" HorizontalAlignment="Center"></Label>
                <Grid x:Name="SelfGrid" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Label Content="Opponent field knowledge" HorizontalAlignment="Center"></Label>
                <Grid x:Name="OpponentGrid" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
