<Window x:Class="BattleshipUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipUserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="730" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="20">

        <Button Click="CreateNewGameHandle" HorizontalAlignment="Center" VerticalAlignment="Center">Create new game</Button>
        
        <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center">Self field</Label>
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="LightGreen" BorderThickness="4">
                    <Grid x:Name="SelfGrid"/>
                </Border>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Label HorizontalAlignment="Center">Opponent field knowledge</Label>
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="PaleVioletRed" BorderThickness="4">
                    <Grid x:Name="OpponentGrid"/>
                </Border>
            </StackPanel>
            
        </StackPanel>
        
    </StackPanel>
</Window>
